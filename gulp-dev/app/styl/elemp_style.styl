@import url('https://fonts.googleapis.com/css2?family=Montserrat&display=swap')

html
    font-family 'Montserrat','Arial'

.menu
    display:grid
    grid-template-columns 49% 49%
    text-align center
    justify-content center
    height 50px
    background-color: black

.menu_item
    height 100%
    margin auto 0px

.menu_item a
    color white
    text-decoration none

.text
    font-family 'Montserrat','Arial'
    font-size 20px
    display inline-block
    height 100%
    

.text a
    display block
    margin-top 5%
    transition 0.2s

.menu_item.active .text
    border-top-left-radius: 20px
    border-top-right-radius: 20px
    background-color white

.menu_item.active a
    color black
    text-decoration none

.menu_item.active .text > a:hover
    color: black
    font-size 20px

.menu_item .text > a:hover
    font-size 22px
    transition 0.2s

h1
    text-align center

table
    font-family 'Montserrat','Arial'
    margin 30px auto
    max-width 95%
td
    border-bottom thin solid grey

span
    font-size 20px
    font-family 'Montserrat','Arial'

@media screen and (max-width: 900px)
   span
    font-size 15px
    font-family 'Montserrat','Arial'

@media screen and (max-width: 600px)
   span
    font-size 10px
    font-family 'Montserrat','Arial' 