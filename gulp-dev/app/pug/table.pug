            option -------
            option №
            option Название
            option Период
            option Группа
            option Атомная масса
            option Плотность
            option Температура плавления
            option Температура кипения
          span(class="sortText") Порядок сортировки:
          select
            option По возрастанию
            option По убыванию
        input(type="button" value="Сортировать таблицу" class="blueButton" onclick="SortTable()")
        input(type="button" value="Сбросить сортировку" class="redButton" onclick="resetSort()")
      details(class="graph")
        summary Построить график:
        table(class="graph_table")
          tr
            td по оси ОХ
            td по оси OY
          tr
            td
              label Период
              input(name="ox" type="radio" value="period" checked)
            td
              input(name="oy" type="radio" value="temp_kip" checked)
              label Температура кипения
          tr
            td
              label Группа
              input(name="ox" type="radio" value="group")
            td
              input(name="oy" type="radio" value="temp_plav")
              label Температура плавления
